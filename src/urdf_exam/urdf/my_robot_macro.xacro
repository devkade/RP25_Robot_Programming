<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot_macro">

  <!-- 색상 정의 -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <!-- 바퀴 매크로 -->
  <xacro:macro name="wheel" params="name parent xyz">
    <link name="${name}">
      <visual>
        <origin rpy="1.57075 0 0"/>
        <geometry>
          <cylinder length="0.1" radius="0.035"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>
    <joint name="${name}_joint" type="continuous">
      <axis xyz="0 1 0"/>
      <parent link="${parent}"/>
      <child link="${name}"/>
      <origin xyz="${xyz}"/>
    </joint>
  </xacro:macro>

  <!-- 다리 매크로 -->
  <xacro:macro name="leg" params="side parent xyz">
    <link name="${side}_leg">
      <visual>
        <geometry>
          <box size="0.6 0.1 0.2"/>
        </geometry>
        <origin rpy="0 1.57075 0" xyz="0 0 -0.3"/>
        <material name="white"/>
      </visual>
    </link>
    <joint name="base_to_${side}_leg" type="revolute">
      <axis xyz="0 -1 0"/>
      <limit effort="1000.0" lower="-0.548" upper="0.548" velocity="0.5"/>
      <parent link="${parent}"/>
      <child link="${side}_leg"/>
      <origin xyz="${xyz}"/>
    </joint>

    <link name="${side}_base">
      <visual>
        <geometry>
          <box size="0.4 0.1 0.1"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>
    <joint name="${side}_base_joint" type="fixed">
      <parent link="${side}_leg"/>
      <child link="${side}_base"/>
      <origin xyz="0 0 -0.6"/>
    </joint>

    <!-- 앞뒤 바퀴 추가 -->
    <xacro:wheel name="${side}_front_wheel" parent="${side}_base" xyz="0.1333 0 -0.085"/>
    <xacro:wheel name="${side}_back_wheel" parent="${side}_base" xyz="-0.1333 0 -0.085"/>
  </xacro:macro>

  <!-- 그리퍼 매크로 -->
  <xacro:macro name="gripper_finger" params="side parent xyz rpy mesh_origin_rpy axis">
    <joint name="${side}_gripper_joint" type="revolute">
      <axis xyz="${axis}"/>
      <limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <parent link="${parent}"/>
      <child link="${side}_gripper"/>
    </joint>
    <link name="${side}_gripper">
      <visual>
        <origin rpy="${mesh_origin_rpy}" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://urdf_exam/meshes/l_finger.dae"/>
        </geometry>
      </visual>
    </link>
  </xacro:macro>

</robot>

